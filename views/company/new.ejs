<% layout('layout') -%>

<div class="container">
    <div class="row">
    <div class="col-md-10 offset-md-1">
    <div class="row">
    <div class="col-md-5 register-left">
    <h3>Sign Up Now</h3>
    <p>One last step</p>
    </div>
       
    <section id="sign-up-form" class="register-right col-md-7" style="margin-top: 7rem;">
    
        <form class="form-signin needs-validation novalidate" action="/company/register" method="POST" autocomplete="off">
          <div class="register-form">
            <div class="form-group">
                <label for="company-name">Enter Company Name</label>
                <input type="text" id="company-name" name="name" class="form-control">
            </div>

            <div class="form-group">
                <label for="company-type">Specify Company Type</label>
                <input type="text" id="company-type" name="type" class="form-control">
             </div>
    
             <div class="form-group">
               <button class="btn btn-sm btn-primary">Sign Up</button>
           </div>
          </div>
             </form>
    
    </section>
    
    </div>
    </div>
    </div>
    </div>
    <script>
      var navBar=document.querySelector(".navbar");
      navBar.classList.remove("bg-dark");
    </script>

